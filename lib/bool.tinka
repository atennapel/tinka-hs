if : <l> {A : Type l} -> Bool -> A -> A -> A
  = \{A} b t f. indBool (\_. A) t f b;

(<?>) : <l> {A : Type l} -> A -> A -> Bool -> A = \t f b. if b t f;

not : Bool -> Bool = \b. if b False True;

and : Bool -> Bool -> Bool
  = \a b. if a b False;
(&&) = and;

or : Bool -> Bool -> Bool
  = \a b. if a True b;
(||) = or;

xor : Bool -> Bool -> Bool
  = \a b. if a (not b) b;
(^^) = xor;

neqBool = xor;
eqBool : Bool -> Bool -> Bool = \a b. not (neqBool a b);

(!=B) = neqBool;
(==B) = eqBool;
